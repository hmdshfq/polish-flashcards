# Firebase Configuration
# Get these values from Firebase Console â†’ Project Settings

VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=1:your-sender-id:web:your-app-id

# Optional: Enable Firebase emulators for local development
# Set to 'true' to use local Firestore and Auth emulators
# Requires: firebase-tools installed and `firebase emulators:start` running
VITE_USE_EMULATORS=false
